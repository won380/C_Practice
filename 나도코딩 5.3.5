#include <stdio.h>

int apple(int total, int ate);//함수 선언(~~한 함수가 있다)

int apple(int total, int ate) {//함수 정의(이 함수는 ~~한 성질이 있다.)
	printf("전달값과 반환값이 있는 함수입니다.\n");
	return total - ate;//반환값(이 함수는 반환값 즉, 결과값 이 total - ate이다. f(x,y)=x-y꼴이랑 유사한 듯. )
}



int main(void) {//함수 호출
	int ret = apple(5, 2); //(f(x,y)=x-y, x=5,y=2)
	printf("사과 5개 중에서 2개를 먹으면 %d개가 남습니다.\n ", ret);
	return 0;
}
